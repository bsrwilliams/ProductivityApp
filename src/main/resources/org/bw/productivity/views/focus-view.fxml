<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Region?>
<VBox alignment="TOP_CENTER" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.bw.productivity.controller.FocusController" minWidth="650" minHeight="800">

    <Label fx:id="titleLabel" text="Focus" id="title" />
    <HBox alignment="CENTER" id="time-container" spacing="5" prefHeight="500">
        <Label fx:id="timerLabel" text="00:00:00:00" />
    </HBox>

    <HBox alignment="CENTER" spacing="30" id="time-control-container">
        <Button fx:id="startTimerButton" text="Start" onAction="#startTimer" />
        <Button fx:id="stopTimerButton" text="Stop" onAction="#stopTimer"/>
        <Button fx:id="resetTimerButton" text="Reset" onAction="#resetTimer" />
        <Button fx:id="switchFocusBreakButton" text="Break" onAction="#switchFocusBreak" />
    </HBox>

    <Region VBox.vgrow="ALWAYS" />

    <HBox alignment="CENTER" id="footer-container" >
        <Label fx:id="currentRoundLabel" text="0" />
        <Region HBox.hgrow="ALWAYS" />
        <Button id="calendarIcon" styleClass="button-icon" prefWidth="40" prefHeight="40" onAction="#switchToCalendar" />
        <Button id="settingsIcon" styleClass="button-icon" prefWidth="40" prefHeight="40" onAction="#openSettings" />
        <Button fx:id="toggleMuteButton" styleClass="unmuted" onAction="#toggleMute" prefWidth="40" prefHeight="40" />
    </HBox>
</VBox>